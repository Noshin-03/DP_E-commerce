<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="480.0" prefWidth="520.0" style="-fx-background-color: #f4f6f9;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.RegisterController">

   <children>

      <!-- Top Header -->
      <AnchorPane prefHeight="80.0" prefWidth="520.0" style="-fx-background-color: #148041;">
         <children>
            <ImageView fx:id="websiteLogo" fitHeight="40.0" fitWidth="70.0" layoutX="20.0" layoutY="20.0" preserveRatio="true" />
            <Label layoutX="110.0" layoutY="28.0" text="Create Your Account" textFill="WHITE">
               <font>
                  <Font name="Segoe UI Semibold" size="20.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>

      <!-- Input Fields -->
      <Label layoutX="88.0" layoutY="98.0" text="First Name" textFill="#2c3e50">
         <font><Font name="Segoe UI" size="14.0" /></font>
      </Label>
      <TextField fx:id="firstnameTextField" layoutX="88.0" layoutY="116.0" prefWidth="355.0" promptText="Enter your first name" style="-fx-background-radius: 6; -fx-border-color: #ced4da; -fx-border-width: 1;" />

      <Label layoutX="88.0" layoutY="152.0" text="Last Name" textFill="#2c3e50">
         <font><Font name="Segoe UI" size="14.0" /></font>
      </Label>
      <TextField fx:id="lastnameTextField" layoutX="88.0" layoutY="170.0" prefWidth="355.0" promptText="Enter your last name" style="-fx-background-radius: 6; -fx-border-color: #ced4da; -fx-border-width: 1;" />

      <Label layoutX="88.0" layoutY="206.0" text="Email or Username" textFill="#2c3e50">
         <font><Font name="Segoe UI" size="14.0" /></font>
      </Label>
      <TextField fx:id="usernameTextField" layoutX="88.0" layoutY="224.0" prefWidth="355.0" promptText="Enter your email or username" style="-fx-background-radius: 6; -fx-border-color: #ced4da; -fx-border-width: 1;" />

      <Label layoutX="88.0" layoutY="258.0" text="Password" textFill="#2c3e50">
         <font><Font name="Segoe UI" size="14.0" /></font>
      </Label>
      <PasswordField fx:id="setPasswordField" layoutX="88.0" layoutY="276.0" prefWidth="355.0" promptText="Create a strong password" style="-fx-background-radius: 6; -fx-border-color: #ced4da; -fx-border-width: 1;" />

      <Label layoutX="88.0" layoutY="310.0" text="Confirm Password" textFill="#2c3e50">
         <font><Font name="Segoe UI" size="14.0" /></font>
      </Label>
      <PasswordField fx:id="ConfirmPasswordField" layoutX="88.0" layoutY="328.0" prefWidth="355.0" promptText="Re-enter your password" style="-fx-background-radius: 6; -fx-border-color: #ced4da; -fx-border-width: 1;" />

      <!-- Register Button -->
      <Button fx:id="registerButton" layoutX="160.0" layoutY="375.0" onAction="#handleRegisterButton" prefWidth="200.0" prefHeight="40.0" style="-fx-background-color: #148041; -fx-background-radius: 6; -fx-font-weight: bold;" text="Register Now" textFill="WHITE">
         <font><Font name="Segoe UI Semibold" size="16.0" /></font>
      </Button>

      <!-- Already have account + Log In -->
      <Label layoutX="160.0" layoutY="420.0" text="Already have an account?" textFill="#495057">
         <font><Font name="Segoe UI" size="13.0" /></font>
      </Label>

      <Button fx:id="loginButton" layoutX="160.0" layoutY="445.0" onAction="#handleLoginButton" prefWidth="200.0" prefHeight="40.0" style="-fx-background-color: #740e29; -fx-background-radius: 6; -fx-font-weight: bold;" text="Sign In" textFill="WHITE">
         <font><Font name="Segoe UI Semibold" size="16.0" /></font>
      </Button>

   </children>
</AnchorPane>
